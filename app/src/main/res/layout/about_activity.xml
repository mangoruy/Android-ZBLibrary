<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <LinearLayout style="@style/ll_vertical_match_match" >

        <RelativeLayout style="@style/topbar_bg" >

            <ImageButton style="@style/topbar_return_img" />

            <TextView
                style="@style/topbar_title"
                android:layout_centerHorizontal="true"
                android:text="关于" />

            <Button
                style="@style/topbar_right_btn"
                android:text="网页浏览方式" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/match_match"
            android:layout_weight="1" >

            <ScrollView style="@style/match_match" >

                <LinearLayout style="@style/ll_vertical_match_match" >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="15dp"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/tvAboutAppInfo"
                        style="@style/text_big_black"
                        android:layout_marginBottom="30dp"
                        android:text="考核指标看板\nv0.1" />

                    <LinearLayout
                        android:id="@+id/llAboutMainTabActivity"
                        style="@style/content_item_white" >

                        <TextView
                            style="@style/content_item_lf_tv"
                            android:layout_weight="1"
                            android:text="MainTabActivity(App)" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>

                    <View style="@style/divider_horizontal_1px" />

                    <LinearLayout
                        android:id="@+id/llAboutZBLibraryMainActivity"
                        style="@style/content_item_white" >

                        <TextView
                            style="@style/content_item_lf_tv"
                            android:layout_weight="1"
                            android:text="ZBLibrary(Demo)" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>

                    <View
                        style="@style/divider_horizontal_1px"
                        android:layout_marginBottom="@dimen/item_padding_bottom" />

                    <LinearLayout
                        android:id="@+id/llAboutUpdate"
                        style="@style/content_item_white" >

                        <TextView
                            style="@style/content_item_lf_tv"
                            android:layout_weight="1"
                            android:text="内容变更测试" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>

                    <View style="@style/divider_horizontal_1px" />

                    <LinearLayout
                        android:id="@+id/llAboutShare"
                        style="@style/content_item_white" >

                        <TextView
                            style="@style/content_item_lf_tv"
                            android:layout_weight="1"
                            android:text="分享功能测试" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>

                    <View style="@style/divider_horizontal_1px" />

                    <LinearLayout
                        android:id="@+id/llAboutComment"
                        style="@style/content_item_white" >

                        <TextView
                            style="@style/content_item_lf_tv"
                            android:layout_weight="1"
                            android:text="代码测试" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>

                    <View
                        style="@style/divider_horizontal_1px"
                        android:layout_marginBottom="@dimen/item_padding_bottom" />

                    <LinearLayout
                        android:id="@+id/llAboutDeveloper"
                        style="@style/content_item_white" >

                        <TextView
                            style="@style/content_item_lf_tv"
                            android:text="开发者" />

                        <TextView
                            style="@style/content_item_rt_tv"
                            android:layout_weight="1"
                            android:text="yang" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>

                    <View style="@style/divider_horizontal_1px" />

                    <LinearLayout
                        android:id="@+id/llAboutWeibo"
                        style="@style/content_item_white" >

                        <TextView
                            style="@style/content_item_lf_tv"
                            android:layout_weight="1"
                            android:text="网页测试" />

                        <TextView
                            style="@style/content_item_rt_tv"
                            android:layout_weight="1"
                            android:text="www.baidu.com" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>

                    <View style="@style/divider_horizontal_1px" />

                    <LinearLayout
                        android:id="@+id/llAboutContactUs"
                        style="@style/content_item_white" >

                        <TextView
                            style="@style/content_item_lf_tv"
                            android:text="邮件发送测试" />

                        <TextView
                            style="@style/content_item_rt_tv"
                            android:layout_weight="1"
                            android:text="1036041638@qq.com" />

                        <ImageView
                            style="@style/content_item_rt_img"
                            android:padding="0dp" />
                    </LinearLayout>

                    <View
                        style="@style/divider_horizontal_1px"
                        android:layout_marginBottom="@dimen/item_padding_bottom" />

                    <ImageView
                        android:id="@+id/ivAboutQRCode"
                        android:layout_width="@dimen/qrcode_size"
                        android:layout_height="@dimen/qrcode_size"
                        android:layout_marginBottom="@dimen/item_padding_bottom"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@color/white" />

                    <TextView
                        style="@style/text_middle"
                        android:layout_marginBottom="180dp"
                        android:lineSpacingMultiplier="1.2"
                        android:text="二维码生成" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/ivAboutGesture"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/alpha_6"
        android:scaleType="fitXY"
        android:src="@drawable/gesture_left" />

</FrameLayout>